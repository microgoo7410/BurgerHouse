<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivFour"
            android:layout_width="match_parent"
            android:layout_height="95dp"
            app:srcCompat="@drawable/maharaja"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/tvNameFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Maharaja Burger"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="10sp"/>

        <TextView
            android:id="@+id/tvInFour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Duoble Layer of Grilled Veg Patties | Smoky Sause | Fresh Tomato | Mayonesse | Mozarella Cheese | IceBerg Latuce"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginBottom="20sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

    <TextView
            android:id="@+id/tvPriceFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="10sp"
        android:layout_marginLeft="150dp"
        />
        <TextView
            android:id="@+id/tvDispFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMinusFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100sp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvIncFour"
                android:layout_width="89dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPlusFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100sp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60sp">

            <Button
                android:id="@+id/btnOrderFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order"
                android:layout_marginLeft="60sp"/>

            <Button
                android:id="@+id/btnBackFour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60sp"
                android:layout_weight="1"
                android:text="Back" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>