<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivThree"
            android:layout_width="match_parent"
            android:layout_height="86dp"
            app:srcCompat="@drawable/spicychiken"
            android:layout_marginBottom="30dp"/>

        <TextView
            android:id="@+id/tvNameThree"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:lineSpacingExtra="8sp"
            android:text="The Spicy Chicken Burger"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="10sp"/>

        <TextView
            android:id="@+id/tvInThree"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Double layer of chicken patties | Smoky Sause | Juicy tomato | mozarella cheeze | mayonesse | iceberg lettuce"
            android:textAlignment="center"
            android:textStyle="bold" android:layout_marginBottom="30sp"/>

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

             <TextView
            android:id="@+id/tvPriceThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs:"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="20sp"
            android:layout_marginLeft="150sp"/>
            <TextView
            android:id="@+id/tvDisplayThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMinusThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100sp"
                android:layout_weight="1"
                android:text="-"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvIncThree"
                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPlusThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="100sp"
                android:layout_weight="1"
                android:text="+"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOrderThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60sp"
                android:layout_weight="1"
                android:text="Order" />

            <Button
                android:id="@+id/btnBackThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60sp"
                android:layout_weight="1"
                android:text="Back" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>