<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/ivTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            app:srcCompat="@drawable/alootikki" />

        <TextView
            android:id="@+id/tvNameTwo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10sp"
            android:lineSpacingExtra="8sp"
            android:text="The Aloo Tikki Burger"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvInTwo"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:text="classic aloo tikki | sliced tomato | mozarella cheese | mayoneese"
            android:textAlignment="center"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPriceTwo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="150dp"
                android:text="Rs:"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDisplayTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnMinusTwo"
                android:layout_width="6dp"
                android:layout_height="60dp"
                android:layout_marginLeft="100sp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tvIncTwo"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_weight="1"
                android:text="0"
                android:onClick="Add"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnPlusTwo"
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginRight="100dp"
                android:layout_weight="1"
                android:text="+"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60sp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnOrderTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60sp"
                android:layout_weight="1"
                android:text="Order" />

            <Button
                android:id="@+id/btnBackTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60sp"
                android:layout_weight="1"
                android:text="Back" />
        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>